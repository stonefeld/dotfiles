# run prompt, file explorer and browser
super + e
	pcmanfm $HOME
super + shift + i
	$BROWSER

# utilities
super + a; a
	pavucontrol
super + a; h
	termlaunch -f -e htop
super + a; p
	dmmusic
super + a; m; n
	playerctl next
super + a; m; p
	playerctl previous
super + a; m; m
	playerctl play-pause

# dmenu utilities
super + a; l
	dmlogout -d
super + a; n
	dmnotes
super + a; q
	dmpower
super + a; r
	dmrecord
super + a; e
	rofimoji --action clipboard --selector-args '-theme pipboy'
super + a; k
	passmenu -l 20 -p 'Select the password'

# screenshots
super + Print
	screenshot
super + shift + Print
	screenshot 5
super + shift + s
	screenshot -s

# notification controls
super + space
	dunstctl close
super + shift + space
	dunstctl close-all
super + shift + grave
	dunstctl history-pop
super + shift + period
	dunstctl context
super + shift + comma
	dunstctl set-paused toggle

