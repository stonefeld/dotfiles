# System variables control
"pactl set-sink-volume @DEFAULT_SINK@ +10% && status-init"
    XF86AudioRaiseVolume
"pactl set-sink-volume @DEFAULT_SINK@ -10% && status-init"
    XF86AudioLowerVolume
"pactl set-sink-mute @DEFAULT_SINK@ toggle && status-init"
    XF86AudioMute
"xbacklight -inc 10 && status-init"
    XF86MonBrightnessUp
"xbacklight -dec 10 && status-init"
    XF86MonBrightnessDown
"playerctl --player=spotify play-pause"
    Pause

# Utilities
"touchpad"
    Shift + F6
"rfkill unblock all && [ $(pgrep -x nm-applet) ] && killall nm-applet || nm-applet"
    Shift + F7
"screenshot"
    Print
"screenshot 5"
    Shift + Print
"screenshot -s"
    Shift+Mod4 + s

