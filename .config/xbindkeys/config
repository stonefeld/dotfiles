# System variables control
# "amixer sset Pre-Amp 1+ && statusline"
# "pactl set-sink-volume @DEFAULT_SINK@ +10% && statusline"
"(([ $(pgrep -x pulseaudio) ] || [ $(pgrep -x pipewire | sed '1q') ]) && pactl set-sink-volume @DEFAULT_SINK@ +10% || amixer sset Master 10%+) && statusline"
	XF86AudioRaiseVolume
# "amixer sset Pre-Amp 1- && statusline"
# "pactl set-sink-volume @DEFAULT_SINK@ -10% && statusline"
"(([ $(pgrep -x pulseaudio) ] || [ $(pgrep -x pipewire | sed '1q') ]) && pactl set-sink-volume @DEFAULT_SINK@ -10% || amixer sset Master 10%-) && statusline"
	XF86AudioLowerVolume
# "pactl set-sink-mute @DEFAULT_SINK@ toggle && statusline"
"(([ $(pgrep -x pulseaudio) ] || [ $(pgrep -x pipewire | sed '1q') ]) && amixer -D pulse sset Master toggle || amixer sset Master toggle) && statusline"
	XF86AudioMute
"(([ $(pgrep -x pulseaudio) ] || [ $(pgrep -x pipewire | sed '1q') ]) && amixer -D pulse sset Capture toggle || amixer sset Capture toggle) && statusline"
	XF86AudioMicMute
"xbacklight -inc 10 && statusline"
	XF86MonBrightnessUp
"xbacklight -dec 10 && statusline"
	XF86MonBrightnessDown

# Utilities
"rfkill unblock all && [ $(pgrep -x nm-applet) ] && killall nm-applet || nm-applet"
	Shift + F8
"screenshot"
	Mod4 + Print
"screenshot 5"
	Shift+Mod4 + Print
"screenshot -s"
    Shift+Mod4 + s
"dunstctl close"
	Control + space
"dunstctl close-all"
	Control+Shift + space
"dunstctl history-pop"
	Control+Shift + grave
"dunstctl context"
	Control+Shift + period
"dunstctl set-paused toggle && statusline"
	Control+Shift + comma
"xkb-switch -n ; statusline"
	Alt + Shift_L
