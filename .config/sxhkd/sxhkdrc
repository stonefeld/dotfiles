# volume controls
XF86AudioRaiseVolume
	ctrlpanel vu 10
XF86AudioLowerVolume
	ctrlpanel vd 10
XF86AudioMute
	ctrlpanel vm
XF86AudioMicMute
	ctrlpanel mm

# brightness controls
XF86MonBrightnessUp
	ctrlpanel bu 10
XF86MonBrightnessDown
	ctrlpanel bd 10

# run prompt, file explorer and browser
super + p
	cd $HOME && ctrlpanel run
super + s
    cd $HOME && rofi -show drun
super + e
	cd $HOME && termlaunch -f -g 120x34 -e $TERMFM
super + shift + i
	$BROWSER

# utilities
super + a; a
	termlaunch -f -g 120x34 -e alsamixer
super + a; m
	termlaunch -f -g 120x34 -e neomutt
super + a; h
	termlaunch -f -g 120x34 -e htop
super + a; p
	termlaunch -f -g 120x34 -e music

# dmenu utilities
super + a; n
	dmnotes
super + a; r
	dmrecord
super + a; e
	dmemoji
super + a; k
	passmenu -c -l 20 -bw 4 -i

# screenshots
super + Print
	screenshot
super + shift + Print
	screenshot 5
super + shift + s
	screenshot -s

# notification controls
super + space
	dunstctl close
super + shift + space
	dunstctl close-all
super + shift + grave
	dunstctl history-pop
super + shift + period
	dunstctl context
super + shift + comma
	dunstctl set-paused toggle

# vim: ft=conf
