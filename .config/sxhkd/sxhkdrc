# volume controls
XF86AudioRaiseVolume
	ctrlpanel vu 10
XF86AudioLowerVolume
	ctrlpanel vd 10
XF86AudioMute
	ctrlpanel vm
XF86AudioMicMute
	ctrlpanel mm

# brightness controls
XF86MonBrightnessUp
	ctrlpanel bu 10
XF86MonBrightnessDown
	ctrlpanel bd 10

# run prompt, file explorer and browser
super + p
	ctrlpanel run
super + e
	termlaunch -f -g 120x34 -e vifmrun
super + shift + i
	$BROWSER

# utilities
alt + control + a
	termlaunch -f -g 120x34 -e alsamixer
alt + control + m
	termlaunch -f -g 120x34 -e neomutt
alt + control + h
	termlaunch -f -g 120x34 -e htop
alt + control + p
	termlaunch -f -g 120x34 -e music

# dmenu utilities
alt + control + n
	dmnotes
alt + control + r
	dmrecord
alt + control + e
	dmemoji
alt + control + k
	passmenu -c -l 20 -bw 4 -i

# screenshots
super + Print
	screenshot
super + shift + Print
	screenshot 5
super + shift + s
	screenshot -s

# notification controls
super + space
	dunstctl close
super + shift + space
	dunstctl close-all
super + shift + grave
	dunstctl history-pop
super + shift + period
	dunstctl context
super + shift + comma
	dunstctl set-paused toggle

