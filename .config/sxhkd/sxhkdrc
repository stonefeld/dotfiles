# volume controls
XF86AudioRaiseVolume
	ctrlpanel vu 10
XF86AudioLowerVolume
	ctrlpanel vd 10
XF86AudioMute
	ctrlpanel vm
XF86AudioMicMute
	ctrlpanel mm

# brightness controls
XF86MonBrightnessUp
	ctrlpanel bu 10
XF86MonBrightnessDown
	ctrlpanel bd 10

# monitor setup
XF86Display
	dmdisplay

# run prompt, file explorer and browser
super + e
	cd $HOME && termlaunch -f -g 120x34 -e $TERMFM
super + shift + i
	$BROWSER
super + shift + Return
	$SHELL $(which dmkitty)

# utilities
super + a; a
	ctrlpanel mi
super + a; h
	termlaunch -f -g 120x34 -e htop
super + a; p
	dmmusic

# dmenu utilities
super + a; l
	dmlogout -d
super + a; n
	dmnotes
super + a; q
	dmpower
super + a; r
	dmrecord
super + a; e
	dmemoji
super + a; k
	passmenu -l 20 -p 'Select the password'

# screenshots
super + Print
	screenshot
super + shift + Print
	screenshot 5
super + shift + s
	screenshot -s

# notification controls
super + space
	dunstctl close
super + shift + space
	dunstctl close-all
super + shift + grave
	dunstctl history-pop
super + shift + period
	dunstctl context
super + shift + comma
	dunstctl set-paused toggle && pkill -RTMIN+4 dwmblocks

# vim: ft=conf noet
