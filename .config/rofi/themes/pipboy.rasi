configuration {
    show-icons: false;
    font: "Cascadia Code 14";
    display-drun: ">";
    display-run: "(R) >";
    modes: [drun, run];
    scroll-method: 1;
    kb-row-up: "Up,Control+p,Control+k";
    kb-row-down: "Down,Control+n,Control+j";
	ml-row-left: "";
	ml-row-right: "";
	ml-row-up: "";
	ml-row-down: "";
	me-select-entry: "";
	me-accept-entry: "";
}

* {
    background-color: transparent;
    text-color: #ffb641ff;
}

window {
    transparency: "real";
    width: 100%;
    height: 100%;
    location: center;
}

mainbox {
    background-color: #0f0f0fdd;
    padding: 37% 30%;
    horizontal-align: 0.5;
    vertical-align: 0.5;
}

listview {
    border: 2px solid 0 0;
    padding: 4px 0 0;
    border-color: #ffb641ff;
    spacing: 4px;
    scrollbar: true;
    cycle: false;
}

element {
    border: 0;
    padding: 2px;
}

element selected {
    background-color: #fcb23dff;
}

element-text selected {
    text-color: #000000ff;
}

scrollbar {
    width: 4px;
    border: 0;
    handle-color: #ffb641ff;
    handle-width: 8px;
    padding: 0;
}

inputbar {
    spacing: 0;
    text-color: #ffb641ff;
    padding: 2px;
    children: [ prompt, entry ];
}

prompt {
    padding: 0 10px 0 0;
}

entry {
    expand: true;
    blink: true;
    cursor: text;
    cursor-width: 8px;
}

