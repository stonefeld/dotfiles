#!/bin/sh

#       _       _ _
# __  _(_)_ __ (_) |_ _ __ ___
# \ \/ / | '_ \| | __| '__/ __|
#  >  <| | | | | | |_| | | (__
# /_/\_\_|_| |_|_|\__|_|  \___|

userresources="${XDG_CONFIG_HOME:-$HOME/.config}"/X11/Xresources
usermodmap="${XDG_CONFIG_HOME:-$HOME/.config}"/X11/Xmodmap
sysresources=/etc/X11/xinit/.Xresources
sysmodmap=/etc/X11/xinit/.Xmodmap

[ -f "$sysresources" ]  && xrdb -merge "$sysresources"
[ -f "$userresources" ] && xrdb -merge "$userresources"
[ -f "$sysmodmap" ]     && xmodmap "$sysmodmap"
[ -f "$usermodmap" ]    && xmodmap "$usermodmap"

if [ -d /etc/X11/xinit/xinitrc.d ] ; then
	for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
		[ -x "$f" ] && . "$f"
	done
	unset f
fi

# set the key repetion rate
xset r rate 220 30

# check if an application exists
check() {
	commanv -v "$1" &>/dev/null
}

# polkit agent
polkit=/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
check $polkit && $polkit &>/dev/null &

# compositor
comp=/usr/bin/picom
check $comp && $comp &>/dev/null &

# notification manager
notif=/usr/bin/dunst
check $notif && $notif &>/dev/null &

# key remapper
keys=/usr/bin/sxhkd
check $keys && $keys &>/dev/null &

# wallpaper setter
wallp="$HOME"/.local/bin/setbg
check $wallp && $wallp &>/dev/null &

session=${1:-dwm}

case $session in
	dwm)      dwmblocks &>/dev/null &
	          while type dwm >/dev/null; do dwm && continue || break; done
	          exec dwm;;
	qtile)    exec qtile start;;
	plasma)   exec startplasma-x11;;
	openbox)  exec openbox-session;;
	*)        exec $1;;
esac
