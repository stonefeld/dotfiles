# System variables control
#"pactl set-sink-volume @DEFAULT_SINK@ +10%"
"current=$(pacmd dump-volumes | sed '1!d;s/ \+/ /g;s/\%//' | cut -d ' ' -f 8) && [ $current -lt 200 ] && pactl set-sink-volume @DEFAULT_SINK@ +10% && $HOME/.local/bin/statusline/status-init"
    XF86AudioRaiseVolume

"pactl set-sink-volume @DEFAULT_SINK@ -10% && $HOME/.local/bin/statusline/status-init"
    XF86AudioLowerVolume

"pactl set-sink-mute @DEFAULT_SINK@ toggle && $HOME/.local/bin/statusline/status-init"
    XF86AudioMute

"xbacklight -inc 10 && $HOME/.local/bin/statusline/status-init"
    XF86MonBrightnessUp

"xbacklight -dec 10 && $HOME/.local/bin/statusline/status-init"
    XF86MonBrightnessDown

"playerctl --player=spotify play-pause"
    Pause


# Utilities
"~/.local/bin/touchpad"
    Shift + F6

"rfkill unblock all && st -c Floating -e nmtui"
    Shift + F7


# Launch applications
"/usr/local/bin/dmenu_run -c -l 20 -bw 2 -i"
    Mod4 + p

"passmenu -c -l 20 -bw 2 -i"
    Shift+Mod4 + k

"/usr/local/bin/st -c Floating -e pulsemixer"
    Shift+Mod4 + p

"/usr/local/bin/st -c Floating -g 120x34 -e $HOME/.local/bin/mpcf"
    Shift+Mod4 + m

"/usr/local/bin/st -c Floating -g 120x34 -e htop"
    Shift+Mod4 + h

"/usr/local/bin/st -c Floating -g 120x34 -e ranger"
    Mod4 + e

"firefox"
    Shift+Mod4 + i

"~/.local/bin/surfhistory"
    Shift+Mod4 + o

"~/.local/bin/dmlogout"
    Shift+Mod4 + l

"~/.local/bin/dmrecord"
    Shift+Mod4 + r
