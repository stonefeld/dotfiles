#!/bin/sh

if [ ! -z "$*" ]; then
	for i in $*; do
		if [ -f "$i" ]; then
			case $i in
				*.tar.bz2)  tar -xjf $i --verbose;;
				*.tar.gz)   tar -xzf $i --verbose;;
				*.rar)      unrar x $i;;
				*.gz)       gunzip $i;;
				*.tar)      tar -xf $i;;
				*.zip|*.7z) 7z x $i -o./${i%.*};;
				*.Z)        uncompress $i;;
				*)          echo "ex: cannot extract '$i': Filetype not supported";;
			esac
		else
			echo "ex: cannot access '$i': No such file or directory"
		fi
	done
else
	echo "ex [FILE...]"
fi
