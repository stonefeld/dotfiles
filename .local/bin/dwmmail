#!/bin/bash

source config

case $BUTTON in
	1) mailcheck &;;
	3) termlaunch -f -g 120x34 -e neomutt;;
esac

unread="$(find "${XDG_DATA_HOME:-$HOME/.local/share}"/mail/*/[Ii][Nn][Bb][Oo][Xx]/new/* -type f | wc -l 2>/dev/null)"
if [ "$COLORED" = true ]; then
	pgrep -x mailcheck >/dev/null && sync=" ðŸ”„"
	echo " ðŸ“¬ $unread$sync |"
else
    # pgrep -x mailcheck >/dev/null && sync=" $(cl 'gr' '')ó°‘“^d^"
    pgrep -x mailcheck >/dev/null && sync=" ó°‘“"
    # echo " $(cl 'bl' '')ó°‡®^d^ $unread$sync |"
    echo " $(cl 'cy' '')ó°‡® $unread$sync |"
fi
