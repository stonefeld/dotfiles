#!/bin/bash

source config

case $BUTTON in
	1) mailcheck &;;
	3) setsid -f st -c Floating -g 120x34 -e neomutt;;
esac

unread="$(find "${XDG_DATA_HOME:-$HOME/.local/share}"/mail/*/[Ii][Nn][Bb][Oo][Xx]/new/* -type f | wc -l 2>/dev/null)"
if [ "$COLORED" = true ]; then
    pgrep -x mailcheck >/dev/null && icon=" ðŸ”„"
else
    pgrep -x mailcheck >/dev/null && icon=" ó°‘“"
fi

echo " ðŸ“¬ $unread$icon |"
