#!/bin/bash

source config

per=$(cat /sys/class/power_supply/BAT0/capacity)
char=$(cat /sys/class/power_supply/AC/online)

if [ "$COLORED" = true ]; then
	[ "$char" -eq 1 ] && echo " üîå $per% |" && exit
	icon="üîã"
else
    # [ "$char" -eq 1 ] && echo " $(cl 'gr' '')Û∞ÇÑ^d^ $per% |" && exit
    [ "$char" -eq 1 ] && echo " $(cl 'gr' '')Û∞ÇÑ$(cl 'gr' '') $per%  " && exit
	icon="Û∞ÇÉ"
	bat=$(( $per / 10 ))
	case $bat in
        "0")  icon="$(cl 're' '')Û∞Çé";;
		"1")  icon="$(cl 're' '')Û∞Å∫";;
		"2")  icon="$(cl 'or' '')Û∞Åª";;
		"3")  icon="$(cl 'or' '')Û∞Åº";;
		"4")  icon="$(cl 'or' '')Û∞ÅΩ";;
		"5")  icon="$(cl 'ye' '')Û∞Åæ";;
		"6")  icon="$(cl 'ye' '')Û∞Åø";;
		"7")  icon="$(cl 'ye' '')Û∞ÇÄ";;
		"8")  icon="$(cl 'gr' '')Û∞ÇÅ";;
		"9")  icon="$(cl 'gr' '')Û∞ÇÇ";;
		"10") icon="$(cl 'gr' '')Û∞Åπ";;
	esac
fi
# echo " $icon^d^ $per% |"
echo " $icon$(cl 'gr' '') $per%  "
