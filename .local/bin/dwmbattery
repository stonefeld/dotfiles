#!/bin/bash

source config

per=$(cat /sys/class/power_supply/BAT0/capacity)
char=$(cat /sys/class/power_supply/AC/online)

if [ "$COLORED" = true ]; then
	[ "$char" -eq 1 ] && echo " üîå $per% |" && exit
	icon="üîã"
else
	[ "$char" -eq 1 ] && echo " Û∞ÇÑ $per% |" && exit
	icon="Û∞ÇÉ"
	bat=$(( $per / 10 ))
	case $bat in
		"0")  icon="Û∞Çé";;
		"1")  icon="Û∞Å∫";;
		"2")  icon="Û∞Åª";;
		"3")  icon="Û∞Åº";;
		"4")  icon="Û∞ÅΩ";;
		"5")  icon="Û∞Åæ";;
		"6")  icon="Û∞Åø";;
		"7")  icon="Û∞ÇÄ";;
		"8")  icon="Û∞ÇÅ";;
		"9")  icon="Û∞ÇÇ";;
		"10") icon="Û∞Åπ";;
	esac
fi
echo " $icon $per% |"
