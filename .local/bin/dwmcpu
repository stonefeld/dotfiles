	1) notify-send -i "null" -a ps "Most cpu consuming processes" "$(ps axch -o cmd:20,%cpu --sort=-%cpu | head | sed 's/$/%/')";;
	3) setsid -f st -c Floating -g 120x34 -e htop;;
esac

