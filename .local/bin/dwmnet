#!/bin/sh

case $BUTTON in
	1) setsid -f st -c Floating -g 120x34 -e bmon;;
	3) setsid -f st -c Floating -g 120x34 -e bmon;;
esac

update() {
	sum=0
	for arg; do
		read -r i < "$arg"
		sum=$(( sum + i ))
	done
	cache=${XDG_CACHE_HOME:-$HOME/.cache}/${1##*/}
	[ -f "$cache" ] && read -r old < "$cache" || old=0
	printf "%d\\n" "$sum" > "$cache"
	printf "%d\\n" $(( sum - old ))
}

rx=$(update /sys/class/net/[ew]*/statistics/rx_bytes)
tx=$(update /sys/class/net/[ew]*/statistics/tx_bytes)

printf "ðŸ”»%4sB ðŸ”º%4sB\\n" $(numfmt --to=iec $rx $tx)
