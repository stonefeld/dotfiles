#!/bin/sh

COLORED_EMOJIS=$1

clock=$(date '+%I')

if [ "$COLORED_EMOJIS" = true ]; then
    case "$clock" in
        "00") icon="ğŸ•›" ;;
        "01") icon="ğŸ•" ;;
        "02") icon="ğŸ•‘" ;;
        "03") icon="ğŸ•’" ;;
        "04") icon="ğŸ•“" ;;
        "05") icon="ğŸ•”" ;;
        "06") icon="ğŸ••" ;;
        "07") icon="ğŸ•–" ;;
        "08") icon="ğŸ•—" ;;
        "09") icon="ğŸ•˜" ;;
        "10") icon="ğŸ•™" ;;
        "11") icon="ğŸ•š" ;;
        "12") icon="ğŸ•›" ;;
    esac
else
    case "$clock" in
        "00") icon="î" ;;
        "01") icon="î‚" ;;
        "02") icon="îƒ" ;;
        "03") icon="î„" ;;
        "04") icon="î…" ;;
        "05") icon="î†" ;;
        "06") icon="î‡" ;;
        "07") icon="îˆ" ;;
        "08") icon="î‰" ;;
        "09") icon="îŠ" ;;
        "10") icon="î‹" ;;
        "11") icon="îŒ" ;;
        "12") icon="î" ;;
    esac
fi

[ "$COLORED_EMOJIS" = true ] && date "+ğŸ“… %a, %b %d (%Y) $icon %H:%M" || date "+ï—­ %a, %b %d (%Y) $icon %H:%M"
