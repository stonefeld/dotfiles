#!/bin/sh

COLORED_EMOJIS=$1

br=$(cat /sys/class/backlight/*/actual_brightness | sed "1!d")
max=$(cat /sys/class/backlight/*/max_brightness | sed "1!d")
per=$(( $br * 100 / $max ))

if [ "$COLORED_EMOJIS" = true ]; then
    icon="ğŸ’¡ "
else
    case $per in
        "0")   icon="î• ";;
        "9")   icon="î“ ";;
        "10")  icon="î“ ";;
        "19")  icon="î’ ";;
        "20")  icon="î’ ";;
        "29")  icon="î‘ ";;
        "30")  icon="î‘ ";;
        "39")  icon="î ";;
        "40")  icon="î ";;
        "49")  icon="î ";;
        "50")  icon="î ";;
        "59")  icon="îŒ ";;
        "60")  icon="îŒ ";;
        "69")  icon="î‹ ";;
        "70")  icon="î‹ ";;
        "79")  icon="îŠ ";;
        "80")  icon="îŠ ";;
        "89")  icon="îˆ ";;
        "90")  icon="îˆ ";;
        "100") icon="î£ ";;
    esac
fi

echo "$icon$per%"
