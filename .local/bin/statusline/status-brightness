#!/bin/sh

COLORED_EMOJIS=$1

brightness=$(xbacklight -get)

if [ "$COLORED_EMOJIS" = true ]; then
    icon="ğŸ”†"
else
    case $brightness in
        "0")   icon="î•";;
        "10")  icon="î“";;
        "20")  icon="î’";;
        "30")  icon="î‘";;
        "40")  icon="î";;
        "50")  icon="î";;
        "60")  icon="îŒ";;
        "70")  icon="î‹";;
        "80")  icon="îŠ";;
        "90")  icon="îˆ";;
        "100") icon="î£";;
    esac
fi

echo "$icon $brightness%"
