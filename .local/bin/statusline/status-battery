#!/bin/sh

bat=$(acpi | grep "Battery 0:" | awk '{print $4/10}' | cut -d "," -f 1)
bat=$(printf "%0.0f" $bat)
icon=""

case $bat in
    "1") icon="";;
    "2") icon="";;
    "3") icon="";;
    "4") icon="";;
    "5") icon="";;
    "6") icon="";;
    "7") icon="";;
    "8") icon="";;
    "9") icon="";;
    "10") icon="";;
esac

char=$(acpi | grep "Battery 0:" | awk '{print $3}' | cut -d "," -f 1)
[ $char = "Charging" ] && icon=""

battery=$(acpi | grep "Battery 0:" | awk '{print $4}' | cut -d "," -f 1)

echo "$icon $battery"
