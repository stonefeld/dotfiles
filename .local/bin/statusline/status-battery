#!/bin/sh

batinfo=$(acpi | grep "Battery 0:")
batper=$(echo $batinfo | cut -d " " -f 4 | sed 's/\,//;s/\%//')
bat=$(( $batper / 10 ))

icon=""

case $bat in
    "1")  icon="";;
    "2")  icon="";;
    "3")  icon="";;
    "4")  icon="";;
    "5")  icon="";;
    "6")  icon="";;
    "7")  icon="";;
    "8")  icon="";;
    "9")  icon="";;
    "10") icon="";;
esac

char=$(echo $batinfo | cut -d " " -f 3 | sed 's/\,//')
[ $char = "Charging" ] && icon=""

echo "$icon $batper%"
