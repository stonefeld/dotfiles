#!/bin/sh

COLORED_EMOJIS=false

recording=""
if [ -f /tmp/recordingpid ]; then
    [ ! "$COLORED_EMOJIS" = true ] && recording="[ÔÖÄ ÔÑ∞ ] " || recording="‚è∫Ô∏è üé§ | "
fi
variant=$(setxkbmap -query | grep variant | sed 's/\s\+/ /g' | cut -d ' ' -f 2)
[ -z "$variant" ] && klayout=$(setxkbmap -query | grep layout | sed 's/\s\+/ /g' | cut -d ' ' -f 2) || klayout="dvorak"
pacupgrade=$(cat ~/.local/share/updates)

wifi=$(iwgetid -r)
[ -z "$wifi" ] && wifi="Disconnected"

brightness=$(status-brightness $COLORED_EMOJIS)
volume=$(status-volume $COLORED_EMOJIS)
battery=$(status-battery $COLORED_EMOJIS)
date=$(status-clock $COLORED_EMOJIS)

[ ! "$COLORED_EMOJIS" = true ] &&
    statusline="$recording[ÔÑú  $klayout] [Ô£ñ $pacupgrade] [ÔÇû $wifi] [$brightness] [$volume] [$battery] [$date]" ||
    statusline="$recording‚å®Ô∏è $klayout üì¶ $pacupgrade | üì∂ $wifi | $brightness | $volume | $battery | $date"

xsetroot -name "$statusline"
