#!/bin/sh

COLORED_EMOJIS=$1

vol=$(amixer sget Master | sed "6!d;s/%//;s/\[//g;s/\]//g;s/\s\+/ /g")
volume=$(echo $vol | cut -d " " -f 5)

if [ "$COLORED_EMOJIS" = true ]; then
    [ `echo "$volume >= 100" | bc` -eq 1 ] && icon="ðŸ”Š" || icon="ðŸ”‰"
    [ `echo "$volume == 0" | bc` -eq 1 ] && icon="ðŸ”ˆ"
else
    [ `echo "$volume >= 100" | bc` -eq 1 ] && icon="ï€¨" || icon="ï€§"
    [ `echo "$volume == 0" | bc` -eq 1 ] && icon="ï€¦"
fi

mute=$(echo $vol | cut -d " " -f 6)
if [ $mute = "off" ]; then
    if [ ! "$COLORED_EMOJIS" = true ]; then
        echo "ï€¦ Mute"
    else
        echo "ðŸ”‡ Mute"
    fi
else
    echo "$icon $volume%"
fi
