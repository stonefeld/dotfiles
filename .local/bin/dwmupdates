#!/bin/sh

case $BUTTON in
	1) pacupdatecheck &;;
	3) st -c Floating -g 120x34 -e bash -c 'sudo pacman -Syy && sudo pacman -Su --noconfirm && echo "0" > ${XDG_DATA_HOME:-$HOME/.local/share}/updates && pkill -RTMIN+6 dwmblocks';;
esac

updates="$(cat ${XDG_DATA_HOME:-$HOME/.local/share}/updates)"
pgrep -x pacupdatecheck >/dev/null && icon=" ó°‘“"

echo "$updates$icon"
