#!/bin/bash

# Use this variable for loop.
list_envs='dwm i3 qtile gnome-session kde-plasma cinnamon'

select_env () {
    # Prompt for choice.
    printf "\\nWelcome back $USER! Select your environment:\\n"
    available_envs=""
    count=1
    for e in $list_envs; do
        if command -v $e 1>/dev/null 2>&1; then
            available_envs=$(echo "$available_envs $e")
            echo "  [$count] $e"
            let count+=1
        fi
    done
    printf "  [t] tty\n  [q] quit\n"
    read -p "Enter your choice: " choice

    [ "$choice" = 't' ] && exit 0
    [ "$choice" = 'q' ] && exit 1

    let choice+=1
    session=$(echo "$available_envs" | cut -d " " -f $choice)

    if [ -z "$session" ]; then
        printf '\\nThis option is not available'
        sleep 2
    else
        case $session in
            gnome-session)
                XDG_SESSION_TYPE=wayland dbus-run-session gnome-session;;

            kde-plasma)
                DESKTOP_SESSION=plasma; startx plasma;;

            *)
                startx $session;;
        esac
    fi
}

# If no valid environment was selected repeat the loop.
while true; do
    clear
    select_env
done
