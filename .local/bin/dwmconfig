#!/bin/sh
COLORED=false
COLORS="nord"

nord() {
	case "$1" in
		"bg") fg="^c#2E3440^" ;;
		"g1") fg="^c#3B4252^" ;;
		"g2") fg="^c#4C566A^" ;;
		"g3") fg="^c#616E88^" ;;
		"wh") fg="^c#D8DEE9^" ;;
		"cy") fg="^c#88C0D0^" ;;
		"bl") fg="^c#81A1C1^" ;;
		"re") fg="^c#BF616A^" ;;
		"or") fg="^c#D08770^" ;;
		"ye") fg="^c#EBCB8B^" ;;
		"gr") fg="^c#A3BE8C^" ;;
		"ma") fg="^c#B48EAD^" ;;
		"pi") fg="^c#828DD1^" ;;
		"vi") fg="^c#6C77BB^" ;;
	esac
	case "$2" in
		"bg") bg="^b#292D3E^" ;;
		"bl") bg="^b#2E3440^" ;;
		"g1") bg="^b#3B4252^" ;;
		"g2") bg="^b#4C566A^" ;;
		"g3") bg="^b#616E88^" ;;
		"wh") bg="^b#D8DEE9^" ;;
		"cy") bg="^b#88C0D0^" ;;
		"bl") bg="^b#81A1C1^" ;;
		"re") bg="^b#BF616A^" ;;
		"or") bg="^b#D08770^" ;;
		"ye") bg="^b#EBCB8B^" ;;
		"gr") bg="^b#A3BE8C^" ;;
		"ma") bg="^b#B48EAD^" ;;
		"pi") bg="^b#828DD1^" ;;
		"vi") bg="^b#6C77BB^" ;;
	esac
	echo "$fg$bg"
}

gruvbox() {
	case "$1" in
		"bg") fg="^c#181818^" ;;
		"g1") fg="^c#282828^" ;;
		"g2") fg="^c#383838^" ;;
		"g3") fg="^c#928374^" ;;
		"wh") fg="^c#A89984^" ;;
		"cy") fg="^c#689D6A^" ;;
		"bl") fg="^c#458588^" ;;
		"re") fg="^c#CC241D^" ;;
		"or") fg="^c#FE8019^" ;;
		"ye") fg="^c#D79921^" ;;
		"gr") fg="^c#98971A^" ;;
		"ma") fg="^c#B16286^" ;;
		"pi") fg="^c#B16286^" ;;
		"vi") fg="^c#B16286^" ;;
	esac
	case "$2" in
		"bg") bg="^b#181818^" ;;
		"g1") bg="^b#282828^" ;;
		"g2") bg="^b#383838^" ;;
		"g3") bg="^b#928374^" ;;
		"wh") bg="^b#A89984^" ;;
		"cy") bg="^b#689D6A^" ;;
		"bl") bg="^b#458588^" ;;
		"re") bg="^b#CC241D^" ;;
		"or") bg="^b#FE8019^" ;;
		"ye") bg="^b#D79921^" ;;
		"gr") bg="^b#98971A^" ;;
		"ma") bg="^b#B16286^" ;;
		"pi") bg="^b#B16286^" ;;
		"vi") bg="^b#B16286^" ;;
	esac
	echo "$fg$bg"
}

mocha() {
	case "$1" in
		"bg") fg="^c#45475A^";;
		"g1") fg="^c#585B70^";;
        "g2") fg="^c#6C7086^";;
		"re") fg="^c#F38BA8^";;
		"gr") fg="^c#A6E3A1^";;
		"ye") fg="^c#F9E2AF^";;
		"bl") fg="^c#89B4FA^";;
		"ma") fg="^c#F5C2E7^";;
		"cy") fg="^c#94E2D5^";;
		"wh") fg="^c#BAC2DE^";;
		"or") fg="^c#FAB387^";;
        "vi") fg="^c#CBA6F7^";;
	esac
	case "$2" in
		"bg") bg="^b#45475A^";;
		"g1") bg="^b#585B70^";;
        "g2") bg="^b#6C7086^";;
		"re") bg="^b#F38BA8^";;
		"gr") bg="^b#A6E3A1^";;
		"ye") bg="^b#F9E2AF^";;
		"bl") bg="^b#89B4FA^";;
		"vi") bg="^b#F5C2E7^";;
		"cy") bg="^b#94E2D5^";;
		"wh") bg="^b#BAC2DE^";;
		"or") bg="^b#FAB387^";;
        "vi") bg="^b#CBA6F7^";;
	esac
	echo "$fg$bg"
}

tokyonight() {
	case "$1" in
		"bg") fg="^c#24283B^";;
		"g1") fg="^c#32344A^";;
        "g2") fg="^c#444B6A^";;
		"re") fg="^c#F7768E^";;
		"gr") fg="^c#9ECE6A^";;
		"ye") fg="^c#E0AF68^";;
		"bl") fg="^c#7AA2F7^";;
		"ma") fg="^c#AD8EE6^";;
		"cy") fg="^c#449DAB^";;
		"wh") fg="^c#9699A8^";;
		"or") fg="^c#E0AF68^";;
        "vi") fg="^c#AD8EE6^";;
	esac
	case "$2" in
		"bg") bg="^b#24283B^";;
		"g1") bg="^b#32344A^";;
        "g2") bg="^b#444B6A^";;
		"re") bg="^b#F7768E^";;
		"gr") bg="^b#9ECE6A^";;
		"ye") bg="^b#E0AF68^";;
		"bl") bg="^b#7AA2F7^";;
		"ma") bg="^b#AD8EE6^";;
		"cy") bg="^b#449DAB^";;
		"wh") bg="^b#9699A8^";;
		"or") bg="^b#E0AF68^";;
        "vi") bg="^b#AD8EE6^";;
	esac
	echo "$fg$bg"
}

case "$COLORS" in
	"nord")       cl() { echo "$(nord "$1" "$2")"; };;
	"gruvbox")    cl() { echo "$(gruvbox "$1" "$2")"; };;
	"mocha")      cl() { echo "$(mocha "$1" "$2")"; };;
    "tokyonight") cl() { echo "$(tokyonight "$1" "$2")"; };;
	*)            cl() { echo ""; };;
esac

SEP="$(cl 'g2' '')|^d^"
