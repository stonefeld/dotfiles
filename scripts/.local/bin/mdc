#!/bin/bash

prgname="$(basename "$0")"

print_help() {
    printf "Usage: mdc FILES...
OPTIONS:
\t-h --help\tPrint this help message
"
}

print_error() {
    echo "$prgname: $1"
    [ $2 -ne 0 ] && exit $2
}

[ "$#" -eq 0 ] && print_help && exit

for i in $*; do
    case "$i" in
        -h|--help) print_help;;
        *.md)
            [ -f "$i" ] || {
                print_error "'$i:' No such file or directory" 0
                continue
            }
            pandoc \
                "$i" \
                -s -o "${i%.*}".pdf \
                -V 'geometry:margin=1in' \
                --highlight-style=tango \
                --pdf-engine=xelatex \
                --verbose;;
    esac
done
